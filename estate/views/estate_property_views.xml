<?xml version="1.0"?>
<odoo>
    <!-- Add the Action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Estate Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- Add the List -->
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="state"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    <record id="estate_property_type_view_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="name"/>
            </list>
        </field>
    </record>
    <!-- Add the Form -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <span class="o_stat_text">Name</span>
                                <field name="name" />
                            </h1>
                        </div>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Write your description of the property."/>
                        </page>
                        <page string="Status">
                            <group>
                                <field name="state"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="date_availability"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                </group>
                            </group>
                        </page>
                        <page string="Price">
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                            </group>
                        </page>
                        <page string="Location">
                            <group>
                                <field name="country_id"/>
                                <field name="state_id"/>
                                <field name="city"/>
                                <field name="postcode"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Add the Search -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Property">
                <field name="name" string="Title"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state', 'in', ['new', 'offer_received', 'offer_accepted'])]"/>
                <!-- <filter string="Offer Received" name="state_offer" domain="[('state', '=', 'offer_received')]"/> -->
                <group expand="0" string="Group By">
                    <filter string="State" name="state_id" context="{'group_by': 'state_id'}"/>
                    <filter string="Country" name="country" context="{'group_by': 'country_id'}"/>
                    <filter string="Postal Code" name="postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>